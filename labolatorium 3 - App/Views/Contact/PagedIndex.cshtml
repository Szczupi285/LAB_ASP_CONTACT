@model PagingList<Contact>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Phone)
            </th>
            <th></th>
        </tr>

        @foreach(var item in Model.Data){
            <tr>
                <th>
                    @item.Name
                </th>
                <th>
                    @item.Birth
                </th>
                <th>
                    @item.Phone
                </th>
                <th></th>
            </tr>
        }
        
        <nav aria-label="Books page navigation">
            <ul class="pagination">
                @if (Model.IsPrevious)
                {
                    <li class="page-item">
                        <a class="page-link"
                       asp-controller="Contact"
                       asp-action="PagedIndex"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-size="@Model.Size">
                            Poprzednia
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link">Poprzednia</a>
                    </li>
                }
                <li class="page-item disabled">
                    <a class="page-link">@Model.Page</a>
                </li>
                @if (Model.IsNext)
                {
                    <li class="page-item">
                        <a class="page-link"
                       asp-controller="Contact"
                       asp-action="PagedIndex"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-size="@Model.Size">
                            Następna
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link">Następna</a>
                    </li>
                }
            </ul>
        </nav>
     
