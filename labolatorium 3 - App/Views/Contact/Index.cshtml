@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Contact list</h1>
@if(Model.Count > 0){
<div>
    
    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            
            <th>
                Actions
            </th>

            <th>
                @Html.DisplayNameFor(model => model[0].Priority)
            </th>
        </tr>

        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>

                <td>
                    <a class="btn btn-outline-primary" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-outline-info" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

                <td>
                    @item.Priority
                </td>

            </tr>
        }

    </table>
   
</div>
 }