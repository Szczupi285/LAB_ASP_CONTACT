@{
}
<form asp-controller="Forum" asp-action="Details" method="post">
    <div>
        <h1>@Model.Author</h1>
        <p>@Model.Content</p>
        <p>@Model.Tags</p>
        <p>@Model.PublishDate</p>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" asp-controller="Forum" asp-action="Index" type="submit">Go back</button>
    </div>
</form>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f7f7f7;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }

    h1 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    p {
        font-size: 16px;
        line-height: 1.4;
    }

</style>