@{
}

<form asp-controller="Forum" asp-action="Create" method="post">

    <h1>Create Post</h1>
    <div class="mb-3">
        <label asp-for="Author">Author</label>
        <input class="form-control" asp-for="Author" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content">Content</label>
        <input class="form-control"  asp-for="Content" />
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tags">Tags</label>
        <input class="form-control" asp-for="Tags" />
        <span class="text-danger" asp-validation-for="Tags"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Comment">Comment</label>
        <input class="form-control" asp-for="Comment" />
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>
    <div>
        <label asp-for="Priority"></label>
        <span asp-validation-for="Priority" class="text-danger"></span>
        <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()"></select>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>

</form>
