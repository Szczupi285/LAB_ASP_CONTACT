@model List<Forum>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Posts list</h1>
@if(Model.Count > 0){
<div>
    
    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Author)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model[0].Content)
            </th>
             <th>
                @Html.DisplayNameFor(model => model[0].Tags)
            </th>

            <th>
                    @Html.DisplayNameFor(model => model[0].PublishDate)
            </th>

           
        </tr>

        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Author
                </td>
                <td>
                    @item.Tags
                </td>
                    <td>
                        @item.PublishDate
                    </td>

                <td>
                    <a class="btn btn-outline-primary" asp-controller="Forum" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-outline-info" asp-controller="Forum" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-danger" asp-controller="Forum" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

                <td>
                    @item.Priority
                </td>

            </tr>
        }

    </table>
   
</div>
}